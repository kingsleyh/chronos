<!--page title-->
<div class="pagetitle">
  <h1>Users</h1>
  <div class="clearfix"></div>
</div>
<!--page title end-->

<br/>
<div class="pull-left">
<%= link_to('create new user', :new_user, :class => 'btn btn-info') %>
</div>

<!--Events Table-->
<div class="grid">

  <div class="grid-title">
    <div class="pull-left">
      <div class="icon-title"><i class="icon-eye-open"></i></div>
      <span>Existing Users</span>

      <div class="clearfix"></div>
    </div>
    <div class="pull-right">
      <div class="icon-title"><a href="/users"><i class="icon-refresh"></i></a></div>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="grid-content overflow">

    <table class="table table-bordered table-mod-2" id="datatable_3">
      <thead>
      <tr>
        <th>Email</th>
        <th class="hidden-mobile">Admin</th>
        <th class="hidden-mobile">Active</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><span class="<%= status_class(user.admin)%>"><%= user.admin %></span></td>
        <td class="hidden-mobile"><span class="<%= status_class(user.active)%>"><%= user.active %></span></td>
        <td class="action-table">
          <%= link_to image_tag('/design/images/icon/table_del.png'), destroy_user_path(user.id), :data => {:confirm => "Are You Sure You Want To Delete #{user.email}?"}, :method => :get %>
          <%= link_to image_tag('/design/images/icon/table_edit.png'), edit_user_path(user.id) %>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>

    <div class="clearfix"></div>
  </div>

</div>
<!--Example Table END-->