<!--page title-->
<div class="pagetitle">
  <h1>New User</h1>

  <div class="clearfix"></div>
</div>
<!--page title end-->

<%= form_for :user, :url => create_user_path do |f| %>

<!--Input fields Start-->
<div class="grid">
  <div class="grid-title">
    <div class="pull-left">
      <div class="icon-title"><i class="icon-bookmark"></i></div>
      <span>User Details</span>

      <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="grid-content">

    <ul>
      <%- @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <%- end %>
    </ul>

    <div class="formRow">
      <%= f.label :email %>
      <div class="formRight">
        <%= f.text_field :email, :class => 'span7 input' %>
      </div>
    </div>

    <div class="formRow">
      <%= f.label :password %>
      <div class="formRight">
        <%= f.text_field :password, :class => 'span7 input' %>
      </div>
    </div>

    <div class="formRow">
      <div class="formRight">
        <input type="submit" class="btn btn-primary" value="Create">
      </div>
    </div>

    <div class="clearfix"></div>

  </div>
</div>
<!--Input fields END-->

<% end %>



