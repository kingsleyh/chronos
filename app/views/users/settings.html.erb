
<%= form_for :user, :url => update_settings_path do |f| %>
    <!--Input fields Start-->
    <div class="grid">
      <div class="grid-title">
        <div class="pull-left">
          <div class="icon-title"><i class="icon-bookmark"></i></div>
          <span>User Settings</span>

          <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="grid-content">

        <ul>
          <%- @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <%- end %>
        </ul>

        <div class="formRow">
          <%= f.label :default_task %>
          <div class="formRight">
            <%= f.select(:default_task, Task.authorised_for_user(@user.id).collect { |p| ["#{p.project.name} -> #{p.name}", p.id] }, {}, {:class => 'chzn-select chosen_select width-10'}) %>
          </div>
        </div>

        <div class="formRow">
          <div class="formRight">
            <input type="submit" class="btn btn-primary" value="Update">
          </div>
        </div>

        <div class="clearfix"></div>

      </div>
    </div>
    <!--Input fields END-->

<% end %>