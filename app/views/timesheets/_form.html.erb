<%= form_for(@timesheet) do |f| %>

    <!--Input fields Start-->
    <div class="grid">
      <div class="grid-title">
        <div class="pull-left">
          <div class="icon-title"><i class="icon-bookmark"></i></div>
          <span>Timesheet Details</span>

          <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="grid-content">

        <div class="formRow">
          <%= f.label :week %>
          <div class="formRight">
            <%= f.select(:week_commencing, options_for_select(Timesheet.weeks, Time.now.beginning_of_week),{}, {:class => 'chzn-select chosen_select width-10'}) %>
          </div>
        </div>

        <div class="formRow">
          <div class="formRight">
            <input type="submit" class="btn btn-primary" value="<%= button %>">
          </div>
        </div>

        <div class="clearfix"></div>

      </div>
    </div>
    <!--Input fields END-->

<% end %>