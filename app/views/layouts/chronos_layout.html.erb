<script>
    $('#event_date').datepicker({
        format: 'dd-mm-yyyy'
    });


    $('#event_start_time').timepicker({
        template: false,
        showInputs: false
    });

    $('#event_finish_time').timepicker({
        template: false,
        showInputs: false
    });

</script>


