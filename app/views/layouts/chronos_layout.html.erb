<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Chronos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">
  <%= csrf_meta_tags %>

  <!-- Le styles -->
  <link href="/design/css/style.css" rel="stylesheet">
  <link href="/design/css/bootstrap.css" rel="stylesheet">


  <link rel="stylesheet" href="/design/css/jquery-ui-1.8.16.custom.css" media="screen"/>
  <link rel="stylesheet" href="/design/css/fullcalendar.css" media="screen"/>
  <link rel="stylesheet" href="/design/css/chosen.css" media="screen"/>
  <link rel="stylesheet" href="/design/css/glisse.css?1.css">
  <link rel="stylesheet" href="/design/css/jquery.jgrowl.css">
  <link rel="stylesheet" href="/design/css/demo_table.css">
  <link rel="stylesheet" href="/design/css/jquery.fancybox.css?v=2.1.4" media="screen"/>

  <link rel="stylesheet" href="/design/css/icon/font-awesome.css">
  <link rel="stylesheet" href="/design/css/bootstrap-responsive.css">
  <link rel="stylesheet" href="/design/js/datepicker/css/datepicker.css">
  <link type="text/css" href="/design/css/bootstrap-timepicker.min.css"/>

  <!-- Bootstrap Extended -->
  <link href="/design/extend/jasny-fileupload/css/fileupload.css" rel="stylesheet">


  <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  <script language="JavaScript">
      Firefox = navigator.userAgent.indexOf("Firefox") >= 0;
      if (Firefox) document.write("<link rel='stylesheet' href='/design/css/moz.css' type='text/css'>");
  </script>

  <!-- Le fav and touch icons -->
  <link rel="shortcut icon" href="favicon.ico">

</head>

<body>
<!--BEGIN HEADER-->
<div id="header" role="banner">
  <a id="menu-link" class="head-button-link menu-hide" href="#menu"><span>Menu</span></a>
  <!--Logo--><a href="/timesheets" class="logo"><h1>B</h1></a><!--Logo END-->


  <div class="right">


    <!--profile box-->
    <% if user_signed_in? %>
        <div class="dropdown left profile">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <span class="double-spacer"></span>

            <div class="profile-username"><span>Welcome, </span><%= current_user.email %></div>
            <div class="profile-caret"><span class="caret"></span></div>
            <span class="double-spacer"></span>
          </a>

          <div class="dropdown-menu pull-right profile-box">
            <div class="triangle-3"></div>

            <ul class="profile-navigation">
              <li> <%= link_to raw('<i class="icon-user"></i> My Profile'), edit_user_registration_path %></li>
              <li> <%= link_to raw('<i class="icon-cog"></i> Settings'), user_settings_path %></li>
              <li> <%= link_to raw('<i class="icon-off"></i> Logout'), destroy_user_session_path, method: :delete %></li>
            </ul>
          </div>
        </div>
        <div class="clearfix"></div>
    <% end %>
    <!--profile box end-->

  </div>


</div>
<!--END HEADER-->

<div id="wrap">


  <!--BEGIN SIDEBAR-->
  <div id="menu" role="navigation">

    <ul class="main-menu">
      <li><a href="/timesheets"><i class="general"></i> Chronos</a></li>
    </ul>

    <ul class="additional-menu">
      <li><a href="/timesheets"><i class="icon-money"></i> Timesheets</a></li>
      <% if current_user.admin? %>
          <li><a href="/customers"><i class="icon-tasks"></i> Customers</a></li>
          <li><a href="/projects"><i class="icon-picture"></i> Projects</a></li>
          <li><a href="/tasks"><i class="icon-group"></i> Tasks</a></li>
          <li><a href="/users"><i class="icon-group"></i> Users</a></li>
          <li><a href="/approvals"><i class="icon-money"></i> Approvals</a></li>
      <% end %>
    </ul>

    <div class="clearfix"></div>


  </div>
  <!--SIDEBAR END-->


  <!--BEGIN MAIN CONTENT-->
  <div id="main" role="main">
    <div class="block">
      <div class="clearfix"></div>

      <% flash.each do |name, msg| %>
          <div style="margin-top:10px;" id="flash_<%= name %>" class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= msg %>
          </div>
      <% end %>

      <%= yield %>


      <!--BEGIN FOOTER-->
      <div class="footer">
        <div class="left"></div>
        <div class="right"><a href="http://www.masterthought.net"><img src="/design/images/masterthought_logo.png"></a>
        </div>
        <div class="clearfix"></div>
      </div>
      <!--BEGIN FOOTER END-->

      <div class="clearfix"></div>
    </div>
    <!--end .block-->

  </div>
  <!--MAIN CONTENT END-->
</div>
<!--/#wrapper-->


