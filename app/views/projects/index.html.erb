<!--page title-->
<div class="pagetitle">
  <h1>Projects</h1>
  <div class="clearfix"></div>
</div>
<!--page title end-->

<br/>
<div class="pull-left">
<%= link_to('create new project', :new_project, :class => 'btn btn-info') %>
</div>

<!--Events Table-->
<div class="grid">

  <div class="grid-title">
    <div class="pull-left">
      <div class="icon-title"><i class="icon-eye-open"></i></div>
      <span>Existing Projects</span>

      <div class="clearfix"></div>
    </div>
    <div class="pull-right">
      <div class="icon-title"><a href="/projects"><i class="icon-refresh"></i></a></div>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="grid-content overflow">

    <table class="table table-bordered table-mod-2" id="datatable_3">
      <thead>
      <tr>
        <th>Name</th>
        <th class="hidden-mobile">Code</th>
        <th class="hidden-mobile">Description</th>
        <th class="hidden-mobile">Customer</th>
        <th class="hidden-mobile">Active</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.code %></td>
        <td><%= project.description %></td>
        <td><%= project.customer.name %></td>
        <td class="hidden-mobile"><span class="<%= status_class(project.active)%>"><%= project.active %></span></td>
        <td class="action-table">
          <%= link_to image_tag('/design/images/icon/table_del.png'), destroy_project_path(project.id), :data => {:confirm => "Are You Sure You Want To Delete #{project.name}?"}, :method => :get %>
          <%= link_to image_tag('/design/images/icon/table_edit.png'), edit_project_path(project.id) %>
      </tr>
      <% end %>
      </tbody>
    </table>


    <div class="clearfix"></div>
  </div>

</div>
<!--Example Table END-->