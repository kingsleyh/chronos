<%= form_for @customer do |f| %>
    <!--Input fields Start-->
    <div class="grid">
      <div class="grid-title">
        <div class="pull-left">
          <div class="icon-title"><i class="icon-bookmark"></i></div>
          <span>Customer Details</span>

          <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="grid-content">

        <ul>
          <%- @customer.errors.full_messages.each do |msg| %>
              <li style="color:red;"><%= msg %></li>
          <%- end %>
        </ul>

        <div class="formRow">
          <%= f.label :name %>
          <div class="formRight">
            <%= f.text_field :name, :class => 'span7 input' %>
          </div>
        </div>

        <div class="formRow">
          <%= f.label :code %>
          <div class="formRight">
            <%= f.text_field :code, :class => 'span7 input' %>
          </div>
        </div>


        <div class="formRow">
          <%= f.label :description %>
          <div class="formRight">
            <%= f.text_area :description, :class => 'span input same-height-1 resize-text' %>
          </div>
        </div>


        <div class="formRow">
          <%= f.label :active %>
          <div class="formRight">
            <%= f.select(:active, ['true', 'false'], {}, {:class => 'chzn-select chosen_select width-10'}) %>
          </div>
        </div>

        <div class="formRow">
          <div class="formRight">
            <input type="submit" class="btn btn-primary" value="<%= button %>">
          </div>
        </div>

        <div class="clearfix"></div>

      </div>
    </div>
    <!--Input fields END-->

<% end %>